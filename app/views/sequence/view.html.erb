<h1 class="m-3">Результат поиска</h1>

<% if @error %>
    <p class="text-danger m-3"><%= @error %></p>
<% else %>

<div class="m-3">Вы ввели: <%= @input %></div>
<div class="w-25 m-3 table-responsive">
    <table class="table table-striped table-sm table-bordered">
        <thead class="text-center">
            <tr>
                <th scope="col">No.</th>
                <th scope="col">Последовательность</th>
            </tr>
        </thead>
        <tbody>
            <% @subs.each.with_index(1) do |subseq, ind| %>
                <tr>
                    <th scope="row" class="col-1 text-center"><%= ind %></th>
                    <td><%= subseq %></td>
                </tr>
            <% end %>
            <tr>
                    <th scope="row" class="col-1 text-center">Ответ</th>
                    <td><%= @result %></td>
                </tr>
        <tbody>
    </table>
</div>
<% end %>
<br>
<button type="button" class="btn btn-link">
    <%= link_to 'Домой', root_path %>
</button>
